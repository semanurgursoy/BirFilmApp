<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sg.birfilm">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- telefon galerisine erişmek için -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BirFilm"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".post.CommentsActivity"
            android:exported="true"
            android:theme="@style/AppFullScreenTheme"
            />
        <activity
            android:name=".post.CreatePost"
            android:exported="true"
            android:theme="@style/AppFullScreenTheme"
            />
        <activity
            android:name=".tabs.profile.SetPP"
            android:exported="true"
            android:theme="@style/AppFullScreenTheme"
            />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat"
            />
        <activity
            android:name=".ForgotPassword"
            android:exported="true"
            android:theme="@style/AppTheme"
            />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/AppFullScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login"
            android:label="Login"
            android:theme="@style/AppTheme"
            />
        <activity
            android:name=".Signup"
            android:label="Signup"
            android:theme="@style/AppTheme"
            />
        <activity
            android:name=".Home"
            android:label="FlowScreen"
            android:theme="@style/AppFullScreenTheme"
            />
    </application>

</manifest>