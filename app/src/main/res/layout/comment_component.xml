<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/pp_comment_component"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/pp_comment_component">

        <TextView
            android:id="@+id/txt_username_comment_component"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kullanıcı adı"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_comment_comment_component"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:text="yorum burada görünecek..."/>

    </LinearLayout>


</RelativeLayout>